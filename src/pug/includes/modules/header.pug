- var top_nav = [{name: 'О нас', link: 'index.html'}, {name: 'Оформление свадеб', link: 'services.html'}, {name: 'Доставка и оплата', link: 'about.html'}, {name: 'Отзывы', link: 'portfolio.html'}, {name: 'Контакты', link: 'contacts.html'}];
- var navigation = ['Акции', 'Хит продаж', 'Букеты', 'Свадебные', 'Цвет', 'Время года', 'Повод', 'Цена', 'Подарки'];

header.desktop
  .header-top
    .container.row.middle.between
      .logo
        a(href="#")
          img(src="/assets/img/logo-2.png", alt="logo")
          .text
            .site-title Король пион
            .site-desc студия цветов и подарков
      .top-nav
        ul
          each item in top_nav
            li
              a(href= item.link)=item.name

      .top-contact
        .soc-icon
          a(href="")
            img(src="/assets/img/Viber.svg", alt="")
          a(href="")
            img(src="/assets/img/tg.svg", alt="")
          a(href="")
            img(src="/assets/img/WhatsApp.svg", alt="")
        .tel-number
          a(href="tel:+73433822059") +7(343)382-20-59
          a(href="tel:+79126774846") +7(912)677-48-46
          a(data-fancybox, data-src="#feedback-popup", href="javascript:;") заказать звонок
  .header-middle
    .container.row.middle.end
      .site-title Доставка цветов в Екатеринбурге
      .market-header-actions
        .status
          a(data-fancybox, data-src="#status-popup", href="javascript:;") <span class='icon-status'></span> статус заказа
        .header-cart
          a(href="") корзина <span class='icon-basket'></span>
  .header-bottom
    .container.row.middle.between
      a(data-fancybox, data-src="#choice-flowers", href="javascript:;") <span class='icon-flowers'></span> Подобрать букет
      ul
        each item in navigation
            li
              a(href="#")=item
              if(item=='Повод')
                ul.sub-ul
                  li
                    .grid
                      .col
                        .sub-title Повод
                        ul
                          li
                            a(href='#') День рождения
                          li
                            a(href='#') Извинение
