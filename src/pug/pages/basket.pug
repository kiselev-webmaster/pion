extends ../layout/main

block variables
  - var title = 'Корзина - Король Пион';

block content
    section.basket
        .container
            .block-title.center Корзина
            .basket-table
                .grid-noBottom.head
                    .col-3.title.center название
                    .col-3.action
                    .col.count.center колличество
                    .col.price.center цена
                    .col.price-sale.center цена со скидкой
                    .col.all-price.right сумма
                .grid-middle-noBottom.card-item
                    .col-3.title
                        .product-item
                            img(src="/assets/img/basket-1.png", alt="")
                            .title Пионы Белые
                    .col-3.action
                        a(href="#", class="add-postcard" ) Добавить открытку
                    .col.count.center
                        .count-wrap
                            span.minus -
                            span.count 100
                            span.plus +
                    .col.price.center 1350 р.
                    .col.price-sale.center 1299 р.
                    .col.all-price.right
                        a(href="#", class="delete-product-item") +
                        span.price-item 129 900 р.
                .grid-middle-noBottom.card-item
                    .col-3.title
                        .product-item
                            img(src="/assets/img/basket-2.png", alt="")
                            .title Букет с розами, альстромерией, гвоздикой и герберой «искры чувств»
                    .col-3.action
                        a(href="#", class="add-postcard" ) Добавить открытку
                    .col.count.center
                        .count-wrap
                            span.minus -
                            span.count 100
                            span.plus +
                    .col.price.center 1350 р.
                    .col.price-sale.center 1299 р.
                    .col.all-price.right
                        a(href="#", class="delete-product-item") +
                        span.price-item 129 900 р.
                .grid-middle-noBottom.card-item
                    .col-3.title
                        .product-item
                            img(src="/assets/img/basket-3.png", alt="")
                            .title Открытка "Щенок"
                    .col-3.action
                        a(href="#", class="add-postcard" ) Добавить открытку
                    .col.count.center
                        .count-wrap
                            span.minus -
                            span.count 100
                            span.plus +
                    .col.price.center 1350 р.
                    .col.price-sale.center 1299 р.
                    .col.all-price.right
                        a(href="#", class="delete-product-item") +
                        span.price-item 129 900 р.
                .grid-middle-noBottom.card-item
                    .col-3.title
                        .product-item
                            img(src="/assets/img/basket-3.png", alt="")
                            .title Открытка "Щенок"
                    .col-3.action
                        a(href="#", class="pin-down") Прикрепить к товару
                        a(href="#", class="text-enter") ввести текст открытки
                    .col.count.center
                        .count-wrap
                            span.minus -
                            span.count 100
                            span.plus +
                    .col.price.center 1350 р.
                    .col.price-sale.center 1299 р.
                    .col.all-price.right
                        a(href="#", class="delete-product-item") +
                        span.price-item 129 900 р.
                .summa-wrap
                    .price сумма: <span>129 900 р.</span>
                    .btn-wrap
                        a(href="#") Оформить заказ
                        
    section
        .container
            .block-title.center Получателю также понравится

            ul.tabs
                li.tab-link.current(data-tab="tab-1") шары
                li.tab-link(data-tab="tab-2") открытки
                li.tab-link(data-tab="tab-3") конфеты
                li.tab-link(data-tab="tab-4") игрушки
            .tab-content.current(id="tab-1")
