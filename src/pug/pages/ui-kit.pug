extends ../layout/main

block variables
  - var title = 'UI KIT - Король Пион';

block content
    section.container
        .block-title.center UI KIT
        .grid
            .col
                +input('text', 'ваше имя', 1)
                +input('text', 'ваше имя', 0, 'error')
                +input('text', 'ваше имя', 0)
            .col
                +input('tel', 'Телефон', 1)
                +textarea()
            .col
                +input('date', 'Дата', 1)
                +textarea('error')
        .grid
            .col
                +time-input()
            .col
                .radio-wrap.gorizontal
                    input(type="radio", name="radio1", id="radio1-1")
                    label(for="radio1-1") один
                    input(type="radio", name="radio1", id="radio1-2")
                    label(for="radio1-2") два
                    input(type="radio", name="radio1", id="radio1-3")
                    label(for="radio1-3") три
                .radio-wrap.vertical
                    input(type="radio", name="radio2", id="radio2-1")
                    label(for="radio2-1") один
                    input(type="radio", name="radio2", id="radio2-2")
                    label(for="radio2-2") два
                    input(type="radio", name="radio2", id="radio2-3")
                    label(for="radio2-3") три
            .col
                .checkbox-wrap.gorizontal
                    input(type="checkbox", name="checkbox1", id="checkbox1-1")
                    label(for="checkbox1-1") один
                    input(type="checkbox", name="checkbox1", id="checkbox1-2")
                    label(for="checkbox1-2") два
                    input(type="checkbox", name="checkbox1", id="checkbox1-3")
                    label(for="checkbox1-3") три
                .checkbox-wrap.vertical
                    input(type="checkbox", name="checkbox2", id="checkbox2-1")
                    label(for="checkbox2-1") один
                    input(type="checkbox", name="checkbox2", id="checkbox2-2")
                    label(for="checkbox2-2") два
                    input(type="checkbox", name="checkbox2", id="checkbox2-3")
                    label(for="checkbox2-3") три